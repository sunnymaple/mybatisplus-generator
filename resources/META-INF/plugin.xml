<idea-plugin>
  <id>cn.sunnymaple.mybatisplus.generator</id>
  <name>MybatisPlus代码生成器</name>
  <version>1.0.0</version>
  <vendor email="sunnymaple8@163.com" url="http://www.sunnymaple.cn">晴枫慕竹</vendor>

  <description>
    MyBatisPlus代码生成器，只需要简单的配置，一键即可生成Controller、Service、Mapper、xml等代码
  </description>

  <change-notes>
    1.0.0：版本1，只提供了MyBatisPlus generator相关配置中的常用的配置，属于简易版
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="145.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <!-- Add your actions here -->

    <action id="MyBatisPlusGenerator" class="cn.sunnymaple.mybatisplus.generator.action.MyBatisPlusGenerator" text="mybatisplus代码生成器"
            description="mybatisplus generator" icon="/img/mybatis_15_15.png"  >
      <add-to-group group-id="ToolsMenu" anchor="first" />
      <keyboard-shortcut first-keystroke="alt S" keymap="$default"></keyboard-shortcut>
    </action>

  </actions>

</idea-plugin>